<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_type_icon"/>

        <TextView
            android:id="@+id/healthy_book_classify_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <TextView
            android:gravity="end"
            android:id="@+id/healthy_book_classify_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>


    </LinearLayout>




    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">


        <android.support.v7.widget.CardView
            android:id="@+id/healthy_book_card_0"
            style="@style/Healthy_Book_Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0ff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/healthy_book_view_0"
                    style="@style/Healthy_Book_Icon"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/healthy_book_title_0"
                    style="@style/Healthy_Book_Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/healthy_book_author_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/healthy_book_rcount_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/healthy_book_card_1"
            style="@style/Healthy_Book_Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0ff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/healthy_book_view_1"
                    style="@style/Healthy_Book_Icon"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/healthy_book_title_1"
                    style="@style/Healthy_Book_Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/healthy_book_author_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/healthy_book_rcount_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/healthy_book_card_2"
            style="@style/Healthy_Book_Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0ff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/healthy_book_view_2"
                    style="@style/Healthy_Book_Icon"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/healthy_book_title_2"
                    style="@style/Healthy_Book_Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/healthy_book_author_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/healthy_book_rcount_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/healthy_book_card_3"
            style="@style/Healthy_Book_Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0ff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/healthy_book_view_3"
                    style="@style/Healthy_Book_Icon"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/healthy_book_title_3"
                    style="@style/Healthy_Book_Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/healthy_book_author_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/healthy_book_rcount_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>


    <TextView
        android:id="@+id/book_item_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="换一波推荐"/>

</LinearLayout>