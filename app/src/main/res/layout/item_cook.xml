<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#ddd"
                android:padding="5dp">

    <ImageView
        android:id="@+id/iv_cook_img"
        android:layout_width="144dp"
        android:layout_height="81dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:paddingRight="16dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_cook_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_cook_img"
        android:layout_toRightOf="@id/iv_cook_img"
        android:textSize="20sp"
        tools:text="name"/>

    <TextView
        android:id="@+id/tv_cook_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_cook_img"
        android:lines="1"
        tools:text="food"/>

    <TextView
        android:id="@+id/tv_cook_fcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="count"
        android:layout_alignBottom="@+id/iv_cook_img"
        android:layout_toRightOf="@+id/iv_cook_img"
        android:layout_toEndOf="@+id/iv_cook_img"/>
</RelativeLayout>